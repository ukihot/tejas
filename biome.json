{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"files": {
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.css",
			"tests/**/*.ts",
			"tests/**/*.tsx"
		],
		"ignoreUnknown": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": { "level": "error", "fix": "safe", "options": {} }
			},
			"suspicious": { "noUnknownAtRules": "warn" }
		},
		"domains": {
			"react": "recommended"
		}
	},
	"formatter": {
		"enabled": true
	}
}
